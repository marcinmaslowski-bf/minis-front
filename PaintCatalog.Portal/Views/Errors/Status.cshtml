@model PaintCatalog.Portal.Models.ErrorStatusViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer[$"Title_{Model.StatusCode}"];
    var description = Localizer.GetString($"Message_{Model.StatusCode}");

    if (description.ResourceNotFound)
    {
        ViewData["Title"] = Localizer["Title_Default"];
        description = Localizer.GetString("Message_Default");
    }
}

<section class="error status-error">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="display-4 mb-3">@Model.StatusCode</div>
                <h1 class="mb-3">@ViewData["Title"]</h1>
                <p class="lead mb-4">@description.Value</p>

                @if (!string.IsNullOrEmpty(Model.OriginalPath))
                {
                    <p class="text-muted small">@Localizer["RequestedPathLabel"] @Model.OriginalPath</p>
                }

                <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">@Localizer["GoHome"]</a>
                <a asp-controller="Paints" asp-action="Index" class="btn btn-outline-secondary">@Localizer["BrowsePaints"]</a>
            </div>
        </div>
    </div>
</section>
