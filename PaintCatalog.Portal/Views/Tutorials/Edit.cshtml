@model PaintCatalog.Portal.Models.Tutorials.TutorialEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var isEdit = Model.IsEdit;
    ViewData["Title"] = isEdit ? Localizer["Page_Title_Edit", Model.Title].Value : Localizer["Page_Title_Create"].Value;
    ViewData["MetaDescription"] = Localizer["Page_Description"].Value;
}

<section class="space-y-6">
    <div class="flex items-start justify-between gap-4">
        <div class="space-y-1">
            <p class="text-xs font-semibold uppercase tracking-wide text-emerald-500">@Localizer["Header_Badge"]</p>
            <h1 class="text-2xl font-semibold text-slate-900 dark:text-white">
                @(isEdit ? Localizer["Header_Title_Edit"] : Localizer["Header_Title_Create"])
            </h1>
            <p class="text-sm text-slate-600 dark:text-slate-300">@Localizer["Header_Subtitle"]</p>
        </div>

        @if (isEdit && !Model.Published)
        {
            <button type="submit"
                    form="tutorial-form"
                    formaction="@Url.Action("Edit", "Tutorials", new { id = Model.Id })"
                    name="submitAction"
                    value="publish"
                    class="inline-flex items-center gap-2 rounded-xl border border-emerald-400/70 bg-white/60 px-4 py-2 text-sm font-semibold text-emerald-700 shadow-sm transition hover:bg-emerald-50 dark:border-emerald-400/60 dark:bg-slate-900/60 dark:text-emerald-200">
                <span class="rounded-lg bg-emerald-500/10 p-1 text-emerald-600 dark:text-emerald-200" data-icon="sparkles"></span>
                <span>@Localizer["Action_Publish"]</span>
            </button>
        }
    </div>

    <form id="tutorial-form" method="post" class="space-y-5">
        @Html.AntiForgeryToken()
        <input asp-for="Published" type="hidden" />
        <div class="space-y-2">
            <label class="block text-sm font-semibold text-slate-800 dark:text-slate-100" for="Title">@Localizer["Field_Title"]</label>
            <input asp-for="Title"
                   class="w-full rounded-xl border border-slate-300 bg-white/80 px-3 py-2 text-sm text-slate-900 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500/40 dark:border-slate-700 dark:bg-slate-950/40 dark:text-slate-100" />
            <span asp-validation-for="Title" class="text-xs text-rose-600"></span>
        </div>

        <div class="space-y-2">
            <div class="flex items-center justify-between gap-3">
                <label class="block text-sm font-semibold text-slate-800 dark:text-slate-100" for="title-image-upload">@Localizer["Field_TitleImage"]</label>
                <span asp-validation-for="TitleImageAttachmentId" class="text-xs text-rose-600"></span>
            </div>
            <div class="space-y-3 rounded-xl border border-slate-200 bg-white/70 p-3 dark:border-slate-700 dark:bg-slate-950/40">
                <input asp-for="TitleImageAttachmentId" type="hidden" />
                <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                    <div class="space-y-2">
                        <input id="title-image-file" type="file" accept="image/*" class="hidden" />
                        <button id="title-image-upload" type="button" class="flex items-center justify-center gap-2 rounded-lg border border-emerald-500 px-3 py-2 text-sm font-semibold text-emerald-700 transition hover:bg-emerald-50 dark:border-emerald-400 dark:text-emerald-200 dark:hover:bg-emerald-400/10">
                            <span class="rounded-lg bg-emerald-500/10 p-1 text-emerald-600 dark:text-emerald-200" data-icon="attachment"></span>
                            <span>@Localizer["Action_UploadTitleImage"]</span>
                        </button>
                        <p id="title-image-status" class="text-xs text-slate-500 dark:text-slate-400"></p>
                    </div>
                    <div id="title-image-preview" class="flex min-h-[120px] min-w-[180px] items-center justify-center overflow-hidden rounded-lg border border-dashed border-slate-300 bg-white/70 p-2 text-xs text-slate-500 dark:border-slate-700 dark:bg-slate-900/40 dark:text-slate-400"></div>
                </div>
            </div>
        </div>

        <div class="space-y-2">
            <label class="block text-sm font-semibold text-slate-800 dark:text-slate-100">@Localizer["Field_Content"]</label>
            <div id="tutorial-editor" class="space-y-3"></div>
            <button id="tutorial-add-section" type="button" class="inline-flex items-center gap-2 rounded-lg border border-slate-300 px-3 py-2 text-xs font-semibold text-slate-700 transition hover:border-emerald-500 hover:text-emerald-600 focus:outline-none focus:ring-2 focus:ring-emerald-400 dark:border-slate-700 dark:text-slate-200 dark:hover:border-emerald-500 dark:hover:text-emerald-300">
                <span class="rounded-lg bg-emerald-500/10 p-1 text-emerald-600 dark:text-emerald-300" data-icon="plus"></span>
                <span>Add section</span>
            </button>
            <textarea asp-for="ContentJson" rows="18"
                      class="hidden"></textarea>
            <p class="text-xs text-slate-500 dark:text-slate-400">@Localizer["Field_Content_Help"]</p>
            <span asp-validation-for="ContentJson" class="text-xs text-rose-600"></span>
        </div>

        <div class="flex items-center gap-3">
            <button type="submit"
                    formaction="@(isEdit ? Url.Action("Edit", "Tutorials", new { id = Model.Id }) : Url.Action("Create", "Tutorials"))"
                    name="submitAction"
                    value="save"
                    class="inline-flex items-center gap-2 rounded-xl bg-emerald-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-emerald-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75 10.5 18 19.5 6" />
                </svg>
                @(isEdit ? Localizer["Action_Save"] : Localizer["Action_Create"])
            </button>

            @if (isEdit)
            {
                <button type="submit"
                        formaction="@Url.Action("Edit", "Tutorials", new { id = Model.Id })"
                        name="submitAction"
                        value="publish"
                        class="inline-flex items-center gap-2 rounded-xl border border-emerald-400 bg-emerald-50 px-4 py-2 text-sm font-semibold text-emerald-700 shadow-sm transition hover:bg-emerald-100 dark:border-emerald-500 dark:bg-emerald-900/40 dark:text-emerald-100">
                    <span class="rounded-lg bg-emerald-500/10 p-1 text-emerald-600 dark:text-emerald-200" data-icon="sparkles"></span>
                    <span>@Localizer["Action_SaveAndPublish"]</span>
                </button>
            }

            <a href="@Url.Action("Index", "Tutorials")"
               class="rounded-xl border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-500 hover:text-slate-900 dark:border-slate-700 dark:text-slate-200 dark:hover:border-slate-500">@Localizer["Action_Cancel"]</a>
        </div>

        <div asp-validation-summary="All" class="text-sm text-rose-600"></div>
    </form>
</section>

@section Scripts {
    <script src="~/js/tutorial-editor.js"></script>
}
