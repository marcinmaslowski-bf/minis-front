@model PaintCatalog.Portal.Models.Tutorials.TutorialsIndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Page_Title"].Value;
    ViewData["MetaDescription"] = Localizer["Page_Description"].Value;
}

<section class="space-y-4">
    <div class="flex items-center justify-between gap-4">
        <div class="space-y-1">
            <p class="text-xs font-semibold uppercase tracking-wide text-emerald-500">@Localizer["Header_Badge"]</p>
            <h1 class="text-2xl font-semibold text-slate-900 dark:text-white">@Localizer["Header_Title"]</h1>
            <p class="text-sm text-slate-600 dark:text-slate-300">@Localizer["Header_Subtitle"]</p>
        </div>
        <a href="@Url.Action("Create", "Tutorials")"
           class="inline-flex items-center gap-2 rounded-xl bg-emerald-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-emerald-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            @Localizer["Header_Create"]
        </a>
    </div>

    @if (TempData["Error"] is string errorMessage)
    {
        <div class="rounded-xl border border-rose-400/60 bg-rose-50 p-3 text-sm text-rose-700 dark:border-rose-500/60 dark:bg-rose-950/30 dark:text-rose-100">
            @errorMessage
        </div>
    }

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white/80 shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
        <table class="min-w-full divide-y divide-slate-200 text-sm dark:divide-slate-800">
            <thead class="bg-slate-50 dark:bg-slate-900">
                <tr class="text-left text-xs uppercase tracking-wide text-slate-500 dark:text-slate-400">
                    <th class="px-4 py-3">@Localizer["Table_Title"]</th>
                    <th class="px-4 py-3">@Localizer["Table_Created"]</th>
                    <th class="px-4 py-3">@Localizer["Table_Updated"]</th>
                    <th class="px-4 py-3 text-right">@Localizer["Table_Actions"]</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
                @if (Model.Tutorials.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="px-4 py-6 text-center text-slate-500 dark:text-slate-300">
                            @Localizer["Table_Empty"]
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var tutorial in Model.Tutorials)
                    {
                        <tr class="hover:bg-emerald-50/50 dark:hover:bg-slate-800/40">
                            <td class="px-4 py-3 font-semibold text-slate-900 dark:text-white">@tutorial.Title</td>
                            <td class="px-4 py-3 text-slate-600 dark:text-slate-300">@FormatDate(tutorial.CreatedAtUtc)</td>
                            <td class="px-4 py-3 text-slate-600 dark:text-slate-300">@FormatDate(tutorial.UpdatedAtUtc)</td>
                            <td class="px-4 py-3 text-right">
                                <div class="flex justify-end gap-2">
                                    <a href="@Url.Action("Details", "Tutorials", new { id = tutorial.Id })"
                                       class="rounded-lg border border-slate-300 px-3 py-1 text-xs font-semibold text-slate-700 transition hover:border-emerald-500 hover:text-emerald-600 dark:border-slate-700 dark:text-slate-200 dark:hover:border-emerald-400 dark:hover:text-emerald-300">
                                        @Localizer["Action_View"]
                                    </a>
                                    <a href="@Url.Action("Edit", "Tutorials", new { id = tutorial.Id })"
                                       class="rounded-lg border border-amber-300 px-3 py-1 text-xs font-semibold text-amber-700 transition hover:border-amber-500 hover:text-amber-600 dark:border-amber-700 dark:text-amber-200 dark:hover:border-amber-500 dark:hover:text-amber-100">
                                        @Localizer["Action_Edit"]
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@tutorial.Id" method="post" class="m-0" onsubmit="return confirm('@Localizer["Action_DeleteConfirm"]');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="rounded-lg border border-rose-300 px-3 py-1 text-xs font-semibold text-rose-700 transition hover:border-rose-500 hover:text-rose-600 dark:border-rose-700 dark:text-rose-200 dark:hover:border-rose-500 dark:hover:text-rose-100">
                                            @Localizer["Action_Delete"]
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <details class="rounded-2xl border border-slate-200 bg-slate-50/70 p-4 text-sm text-slate-600 dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">
        <summary class="cursor-pointer font-semibold text-slate-800 dark:text-slate-100">@Localizer["Raw_Title"]</summary>
        <pre class="mt-3 overflow-auto rounded-xl bg-slate-900 p-3 text-xs text-emerald-100 dark:bg-slate-950">@Model.RawJson</pre>
    </details>
</section>

@functions {
    private static string FormatDate(DateTime? date)
    {
        return date.HasValue ? date.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "â€“";
    }
}
