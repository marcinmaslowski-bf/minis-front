@using System.Collections.Generic
@using System.Text.Encodings.Web
@using System.Text.Json
@using PaintCatalog.Portal.Helpers
@model PaintCatalog.Portal.Models.PaintsViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizerFactory LocalizerFactory
@{
    ViewData["Title"] = "Paints Admin";

    var paintsDataEndpoint = Url.Action("AdminData", "Paints") ?? "/admin/paints/data";
    var brandsEndpoint = Url.Action("Brands", "Paints") ?? "/paints/brands";
    var seriesEndpoint = Url.Action("Series", "Paints") ?? "/paints/series";
    var createEndpoint = Url.Action("Create", "Paints") ?? "/admin/paints";
    var updateEndpoint = Url.Action("Update", "Paints", new { id = "__id__" }) ?? "/admin/paints/__id__";
    var deleteEndpoint = Url.Action("Delete", "Paints", new { id = "__id__" }) ?? "/admin/paints/__id__";

    var initialPaintsJson = string.IsNullOrWhiteSpace(Model.InitialPaintsJson) ? "null" : Model.InitialPaintsJson;
    var brandsJson = string.IsNullOrWhiteSpace(Model.BrandsJson) ? "null" : Model.BrandsJson;

    var searchLocalizer = LocalizerFactory.Create("Views.Paints.Index", typeof(Program).Assembly.GetName().Name);
    var enumLabels = EnumLabelHelper.CreatePaintEnumLabels(searchLocalizer);

    var jsonOptions = new JsonSerializerOptions
    {
        Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping
    };

    var bootstrap = new
    {
        endpoints = new
        {
            data = paintsDataEndpoint,
            brands = brandsEndpoint,
            series = seriesEndpoint,
            create = createEndpoint,
            update = updateEndpoint,
            delete = deleteEndpoint
        },
        enums = new
        {
            types = enumLabels.Types,
            sheens = enumLabels.Sheens,
            mediums = enumLabels.Mediums,
            effects = enumLabels.Effects,
            usages = enumLabels.Usages,
            forms = enumLabels.Forms,
            gradients = enumLabels.Gradients
        }
    };

    var bootstrapJson = JsonSerializer.Serialize(bootstrap, jsonOptions);
}

