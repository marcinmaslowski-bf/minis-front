@model PaintCatalog.Portal.Models.Bookmarks.BookmarkListViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Page_Title"].Value;
    ViewData["MetaDescription"] = Localizer["Page_Description"].Value;

    var tabsModel = new PaintCatalog.Portal.Models.Bookmarks.BookmarkTabsViewModel
    {
        BookmarksEndpoint = Model.BookmarksEndpoint,
        Prefix = "bookmark",
        Variant = "bookmarks"
    };
}

<section class="space-y-6">
    <div class="space-y-2">
        <h1 class="text-3xl font-semibold leading-tight tracking-tight md:text-4xl">@Localizer["Heading"]</h1>
        <p class="max-w-2xl text-sm text-slate-600 dark:text-slate-300">@Localizer["Subheading"]</p>
    </div>

    @await Html.PartialAsync("~/Views/Shared/_BookmarkTabs.cshtml", tabsModel)
</section>
